{
  "name": "backstage-backend",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18",
    "yarn": ">=1.19.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "@backstage/backend-defaults": "^0.2.3",
    "@backstage/backend-app-api": "^0.5.11",
    "@backstage/backend-common": "^0.21.0",
    "@backstage/config": "^1.1.1",
    "@backstage/types": "^1.1.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.18.0",
    "jest": "^29.7.0",
    "typescript": "~5.2.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "resolutions": {
    "@types/react": "^17",
    "@types/react-dom": "^17"
  },
  "prettier": "@backstage/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
} 